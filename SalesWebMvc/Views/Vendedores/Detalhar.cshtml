@model SalesWebMvc.Models.Vendedor

@{
    ViewData["Title"] = "Detalhar";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class = "dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Nome) </dt>
        <dd> @Html.DisplayFor(model => model.Nome) </dd>
    </dl>

    <dl class = "dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Email) </dt>
        <dd> @Html.DisplayFor(model => model.Email)</dd>
    </dl>
            
    <dl class = "dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.DataNascimento) </dt> 
        <dd> @Html.DisplayFor(model => model.DataNascimento) </dd>
    </dl>

    <dl class = "dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.SalarioBase) </dt>
        <dd> @Html.DisplayFor(model => model.SalarioBase) </dd>
    </dl>

    <dl class = "dl-horizontal">
        <dt> @Html.DisplayNameFor(model => model.Departamento.Nome) </dt>
        <dd> @Html.DisplayFor(model => model.Departamento.Nome) </dd>
    </dl>
